
{
    "zk" : "zk://{{ groups['masters'] |join(':2181,') }}:2181/mesos",
    "zk" : "{{ mesos_zookeeper_masters }}",
    "masters": [ {{ groups['masters'] | map('regex_replace', '^(.*)$', '"\\1:5050"') | list | join(", ") }} ],
    "refreshSeconds": 60,
    "ttl": 60,
    "domain": "mesos",
    "port": 53,
    "resolvers": [ "8.8.8.8" ],
    "timeout": 5, 
    "httpon": true,
    "dnson": true,
    "httpport": 8123,
    "externalon": true,
    "listener": "0.0.0.0",
    "SOAMname": "ns1.mesos",
    "SOARname": "root.ns1.mesos",
    "SOARefresh": 60,
    "SOARetry":   600,
    "SOAExpire":  86400,
    "SOAMinttl": 60,
    "IPSources": [ "netinfo", "mesos", "host" ]
}
